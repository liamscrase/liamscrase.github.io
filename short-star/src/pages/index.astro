---
import Layout from "../layouts/Layout.astro";
import FadeUpAnimation from "../components/FadeUpAnimation.astro";
---

<FadeUpAnimation />

<Layout>
  <section id="body-wrapper">
    <section id="banner">
      <div class="content">
        <div class="blurb">
          <img src="images/profile.jpg" alt="" />
          <div class="inner">
            <h1>Hi, I'm Liam ðŸ‘‹</h1>
            <p>
              UX/UI Designer & Front End Support with 4 years of experience.
              Currently working for Motorcentral Technologies â€” a leading tech
              company based in Christchurch, New Zealand.
            </p>
            <p>
              Experience in digital design and front end development, with a
              passion for creating user-friendly, accessible, and visually
              appealing digital experiences.
            </p>
          </div>
        </div>
      </div>
    </section>
    <div class="sections-wrapper">
      <section id="projects">
        <div class="content flex column gap-50">
          <div class="section-header fade-up">
            <span class="sub-header blue">UX/UI Design</span>
            <h2>Project Case Studies</h2>
            <p>
              Case studies of my best UX projects, showcasing innovation, design
              thinking, and problem-solving approaches.
            </p>
          </div>
          <section id="project-list">
            <a
              class="project-card panel-hover acme fade-up"
              href="/acme"
              aria-label="Open Avanti Finance App"
            >
              <div class="text">
                <h3>Acme Website Template</h3>
                <span>2025</span>
                <p>
                  Elevating the standards for car dealer websites in New Zealand
                  with a modern website template and cutting-edge helpful AI
                  features
                </p>
                <div class="button primary">
                  View project <i class="icon-arrow"></i>
                </div>
              </div>
              <img
                src="/images/acme5/acme5-graphic.png"
                alt="Acme Cars website preview"
              />
            </a>

            <a
              class="project-card panel-hover avanti fade-up"
              href="/avanti"
              aria-label="Open Avanti Finance App"
            >
              <div class="text">
                <h3>Avanti Finance App</h3>
                <span>2025</span>

                <p>
                  A convenient mobile and web app for customers to view where
                  theyâ€™re at with their loan repayments.
                </p>
                <div class="button primary">
                  View project <i class="icon-arrow"></i>
                </div>
              </div>
              <img
                src="/images/avanti-app/avanti-graphic.webp"
                alt="Avanti Finance App preview"
              />
            </a>
          </section>
        </div>
      </section>
      <section id="more-projects">
        <div class="content flex column gap-50">
          <div class="section-header fade-up">
            <span class="sub-header blue">Design + Dev</span>
            <h2>Website Projects</h2>
            <p>
              Solo projects where I designed and built complete websites from
              concept to launch.
            </p>
          </div>

          <div class="mini-grid">
            <a
              class="mini-card panel-hover fade-up"
              href="https://theserioussandwich.nz/"
              aria-label="Open The Serious Sandwich website"
              target="_blank"
            >
              <h3>The Serious Sandwich</h3>

              <span class="year">2025</span>
              <p>Playful brand site with a tight, clear menu layout.</p>
              <div class="button primary">
                Visit website
                <i class="icon-open"></i>
              </div>
            </a>
            <a
              class="mini-card panel-hover fade-up"
              href="https://simplystunningstudiostekapo.nz/"
              aria-label="Open Simply Stunning Studios website"
              target="_blank"
            >
              <h3>Simply Stunning Studios</h3>

              <span class="year">2025</span>
              <p>
                Lake Tekapo accommodation site with streamlined booking flow.
              </p>
              <div class="button primary">
                Visit website
                <i class="icon-open"></i>
              </div>
            </a>
            <a
              class="mini-card panel-hover fade-up"
              href="https://terapacars.co.nz/"
              aria-label="Open Te Rapa Cars website"
              target="_blank"
            >
              <h3>Te Rapa Cars</h3>

              <span class="year">2026</span>
              <p>
                Modern used car dealership site showcasing inventory with
                advanced search.
              </p>
              <div class="button primary">
                Visit website
                <i class="icon-open"></i>
              </div>
            </a>
          </div>
        </div>
      </section>
    </div>
  </section>
</Layout>
